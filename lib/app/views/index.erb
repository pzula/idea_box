
    <%= erb :form, locals: {idea: idea} %>

    <form action='/search/results' method='GET'>
      <input type="text" name="phrase" value="">
      <input type="submit" value="search" />
    </form>

    <h3>Existing Ideas</h3>

    <ul class="ideas">
      <% ideas.each do |idea| %>
        <li id="idea_<%= idea.id %>">
          <div class="idea_content">
            <span class="title"><a href="/<%= idea.id %>"><%= idea.title %></a></span><br/>
            <span class="description"><%= idea.description[0..30] %>... <a href="/<%= idea.id %>" class="read_more">(read more &raquo;)</a></span><br/>
            <ul class="tags">
              <% idea.tags.each do |tag| %>
                  <li><a href='/tag/<%= tag %>' class='tag'><%= tag %></a></li>
              <% end %>
            </ul>
          </div>
          <div class="idea_controls">
            <form action="/<%= idea.id %>" method="POST">
              <input type="hidden" name="_method" value="DELETE">
              <input type="submit" class="delete" value="" />
            </form>

            <a href="/<%= idea.id %>/edit" class="edit"></a>

            <form action='/<%= idea.id %>/like' method='POST' style="display: inline">
              <input type='submit' class="like" value=""/>
            </form>
          </div>
        </li>
      <% end %>
    </ul>

    <div id="all_tags">
      All tags
      <ul class="tags">
      <% tags.each do |tag| %>
        <li><a href="/tag/<%=tag %>"><%= tag %></a></li>
      <% end %>
      </ul>
    </div>

